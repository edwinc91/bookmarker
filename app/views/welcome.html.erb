<h1> Welcome </h1>

<h3> Please sign up </h3>

<form action="<%= users_path %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <input type="name" name="user[name]" placeholder="Desired Username"><br/>
  <input type="password" name="user[password]" placeholder="Desired Password"><br/>
  <input type="email" name="user[email]" placeholder="E-mail Address"><br/>
  <input class="submit" type="submit" value="Sign Up">
</form>

<h3> Please sign in </h3>

<form action="<%= session_path %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <input type="name" name="user[name]" placeholder="Username"><br/>
  <input type="password" name="user[password]" placeholder="Password"><br/>
  <input class="submit" type="submit" value="Sign In">
</form>
